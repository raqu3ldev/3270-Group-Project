<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="900.0" spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.AdminSearchFlightsController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Search Flights" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="250" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="250" />
        </columnConstraints>

        <Label text="From City:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="fromCityField" promptText="e.g., New York" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="To City:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="toCityField" promptText="e.g., Los Angeles" GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <Label text="Departure Date:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <DatePicker fx:id="departureDatePicker" promptText="Select date" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Button fx:id="searchButton" text="Search" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.columnSpan="2" />
    </GridPane>

    <Label fx:id="messageLabel" text="" style="-fx-font-weight: bold;" />

    <TableView fx:id="flightsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="flightIdColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="flightNumberColumn" text="Flight #" prefWidth="100" />
            <TableColumn fx:id="fromCityColumn" text="From" prefWidth="120" />
            <TableColumn fx:id="toCityColumn" text="To" prefWidth="120" />
            <TableColumn fx:id="departureTimeColumn" text="Departure" prefWidth="150" />
            <TableColumn fx:id="arrivalTimeColumn" text="Arrival" prefWidth="150" />
            <TableColumn fx:id="capacityColumn" text="Capacity" prefWidth="80" />
            <TableColumn fx:id="availableSeatsColumn" text="Available" prefWidth="80" />
            <TableColumn fx:id="priceColumn" text="Price ($)" prefWidth="80" />
        </columns>
    </TableView>

    <Button fx:id="backButton" text="Back to Admin Menu" />
</VBox>