<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="950.0" spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.AdminViewCustomersController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="View Customers" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="totalCustomersLabel" text="Total Users: 0" style="-fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="refreshButton" text="Refresh" />
    </HBox>

    <Label fx:id="messageLabel" text="" style="-fx-font-weight: bold;" />

    <TableView fx:id="customersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="70" />
            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="130" />
            <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="130" />
            <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="130" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="220" />
            <TableColumn fx:id="addressColumn" text="Address" prefWidth="180" />
            <TableColumn fx:id="stateColumn" text="State" prefWidth="80" />
        </columns>
    </TableView>

    <Button fx:id="backButton" text="Back to Admin Menu" />
</VBox>